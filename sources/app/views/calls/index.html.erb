<h1>Call's history</h1>
<ul>
<% @calls.each do |call| %>
  <li>
    <span>
      [<%= call.created_at.strftime("%Y/%m/%d %H:%M") %>]
    </span>
    <span>
      <% if call.caller_name%><%= call.caller_name %> (<% end %>
      <%= call.caller_number %>
      <% if call.caller_name%>)<% end %>
    </span>
    <span>
      has called <%= call.company_number.sip_endpoint %>.
    </span>
    <span>
      The call was
      <% unless call.respondent == nil %>
        answered by <%= call.respondent.name %> on <%= call.respondent_number.sip_endpoint %>
      <% else %>
        not connected.
        <% if call.record_url %>
          <a href="<%= call.record_url %>">Listen the record</a>
        <% end %>
      <% end %>
    </span>
  </li>
<% end %>
</ul>
